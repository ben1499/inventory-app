extends layout 

block content 
  div.list-page
    div.top-info
      h1= title
      button 
        a(href="/inventory/category/create") Create Category
    div.card-list
      each category in category_list 
        div.card
          a(href=category.url)
            if category.image_url
              img.list-image(src=category.image_url)
            else 
              img.list-image(src="/placeholder.webp")
            p= category.name